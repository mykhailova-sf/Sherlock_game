<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sherlocheck.controller.GameSceneController"
      spacing="10" alignment="TOP_CENTER" prefWidth="450" prefHeight="500">

    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label fx:id="count" style="-fx-font-size: 18px; -fx-font-weight: bold;"></Label>
        <Label fx:id="round" style="-fx-font-size: 18px; -fx-font-weight: bold;"></Label>
    </HBox>

    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label fx:id="roleLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;"></Label>
    </HBox>


    <VBox fx:id="dynamicContainer" spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label fx:id="affirmationLabel" visible="false" managed="false" style="-fx-font-size: 16px;"></Label>
        <Label fx:id="timerLabel" visible="false" managed="false" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

        <HBox fx:id="detectiveArea" spacing="5">
            <Button fx:id="trueButton">TRUE</Button>
            <Button fx:id="falseButton">FALSE</Button>
        </HBox>
        <HBox fx:id="storytellerArea" spacing="5">
            <TextField fx:id="affirmationEditor"></TextField>
            <Button fx:id="affirmationAsTrueButton">Say as TRUE</Button>
            <Button fx:id="affirmationAsFalseButton">Say as FALSE</Button>
        </HBox>
    </VBox>

    <HBox spacing="10">
        <padding>
            <Insets top="5" right="10" bottom="10" left="10"/>
        </padding>
        <TextField fx:id="chatEditor"></TextField>
        <Button fx:id="sendChatMessageButton"> Send </Button>
    </HBox>

    <HBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button fx:id="overGameButton">End Game</Button>
    </HBox>
</VBox>
